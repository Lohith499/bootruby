<%= form_for(@bug) do |f| %>
  <% if @bug.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@bug.errors.count, "error") %> prohibited this bug from being saved:</h2>

      <ul>
      <% @bug.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :title, "Title" %>
    <%= f.text_field :title, id: :bug_title, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :description, "Description" %>
    <%= f.text_area :description, id: :bug_description, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :priority, "Priority" %>
    <!--<%= f.number_field :issue_type %>-->
    <%= f.select :priority, Bug.priorities.keys, selected: @bug.priority , class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :issue_type, "Issue_type" %>
    <!--<%= f.number_field :priority %>-->
    <%= f.select :issue_type, Bug.issue_types.keys, selected: @bug.issue_type, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :status," Status" %>
    <!--<%= f.number_field :status %>-->
    <%= f.select :status, Bug.statuses.keys, selected: @bug.status, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :user_id, "User_Id" %>
    <%= f.select :user_id,
      options_for_select(User.all.collect {|u| ["#{u.lname}, #{u.fname}", u.id]},
      selected: (@bug.user ? @bug.user.id : User.first.id)), {}, class: "form-control" %>
  </div>

  <div class="actions">
    <%= f.submit class: "btn btn-primary" %>
  </div>
<% end %>
